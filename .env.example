# Copy this file to .env and adjust values for your environment

# Security
SECRET_KEY=change-this-to-a-long-random-string
API_KEY=dev-api-key-change-me

# Database
# Default runs on SQLite (no need to set). For Postgres, uncomment below:
# DATABASE_URL=postgresql+psycopg2://doganai:password@localhost:5432/doganai_compliance

# FastAPI
LOG_LEVEL=INFO
APP_TIMEZONE=UTC
DISPLAY_TIMEZONE=Asia/Riyadh

# Uploads
UPLOAD_DIR=app/uploads

# Redis (if used elsewhere)
# REDIS_URL=redis://localhost:6379/0

# Scraping
SCRAPE_DIR=app/scraped

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# S3 (optional evidence storage)
USE_S3_UPLOADS=false
AWS_REGION=me-south-1
AWS_S3_BUCKET=doganai-compliance-evidence
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OIDC / SSO (optional)
OIDC_ISSUER=
OIDC_AUDIENCE=
OIDC_JWKS_URL=
OIDC_EMAIL_CLAIM=email
OIDC_ROLES_CLAIM=realm_access.roles
OIDC_TENANT_CLAIM=
AUTO_CREATE_TENANT=false

# Force LF for Linux-friendly files
*.sh text eol=lf
*.bash text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
Dockerfile* text eol=lf

# Keep Windows-friendly files as CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Source code defaults (LF)
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.java text eol=lf
*.go text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.vue text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.sql text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Configuration files (LF)
*.env text eol=lf
*.env.* text eol=lf
.env* text eol=lf
*.properties text eol=lf
pyproject.toml text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf
requirements*.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf
tox.ini text eol=lf
.flake8 text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Kubernetes and Docker files (LF)
*.k8s.yml text eol=lf
*.k8s.yaml text eol=lf
docker-compose*.yml text eol=lf
docker-compose*.yaml text eol=lf
.dockerignore text eol=lf

# Package manager files (LF)
package.json text eol=lf
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf
yarn.lock text eol=lf
composer.json text eol=lf
composer.lock text eol=lf

# Binary files - no conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tgz binary
*.tar binary
*.tar.gz binary
*.rar binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary
*.mp4 binary
*.avi binary
*.mov binary
*.mp3 binary
*.wav binary
*.ogg binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Git LFS tracking for large files
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.sketch filter=lfs diff=lfs merge=lfs -text

# Security: Prevent secrets from being accidentally committed
*.key binary
*.pem binary
*.crt binary
*.p12 binary
*.pfx binary

# Language-specific settings
*.py diff=python
*.js diff=javascript
*.ts diff=typescript
*.java diff=java
*.go diff=golang
*.rb diff=ruby
*.php diff=php
*.cs diff=csharp

# Merge settings for specific files
CHANGELOG.md merge=union

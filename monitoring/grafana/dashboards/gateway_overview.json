{
  "title": "Gateway Overview",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up, job)",
        "refresh": 2,
        "current": { "text": "gateway", "value": "gateway" }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests (by code)",
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(gateway_http_requests_total[5m])) by (code)",
          "legendFormat": "{{code}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Request Duration p50/p90/p99",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "histogram_quantile(0.5, sum(rate(gateway_http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p50"},
        {"expr": "histogram_quantile(0.9, sum(rate(gateway_http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p90"},
        {"expr": "histogram_quantile(0.99, sum(rate(gateway_http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p99"}
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "stat",
      "title": "Scrape Status (up)",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "max(up{job=~\"$job\"})"}
      ],
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 16 }
    }
  ]
}


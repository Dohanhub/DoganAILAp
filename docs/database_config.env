# =============================================================================
# ENHANCED DATABASE ARCHITECTURE CONFIGURATION - PRODUCTION
# =============================================================================

# PostgreSQL Configuration (Primary Database with TimescaleDB)
PGHOST=postgres-timescale
PGPORT=5432
PGDATABASE=doganai_compliance
PGUSER=doganai
PGPASSWORD=DoganAI2024!
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=40
POSTGRES_ECHO=false
POSTGRES_TIMEZONE=Asia/Riyadh

# Redis Configuration (Caching & Session Management)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=10
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# TimescaleDB Configuration (Time-series Data)
TIMESCALEDB_HOST=postgres-timescale
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=doganai_compliance
TIMESCALEDB_USER=doganai
TIMESCALEDB_PASSWORD=DoganAI2024!
TIMESCALEDB_CHUNK_TIME_INTERVAL=1 day
TIMESCALEDB_COMPRESSION_ENABLED=true
TIMESCALEDB_RETENTION_DAYS=90

# Elasticsearch Configuration (Search & Analytics)
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=true
ELASTICSEARCH_CA_CERTS=
ELASTICSEARCH_TIMEOUT=60
ELASTICSEARCH_MAX_RETRIES=5
ELASTICSEARCH_RETRY_ON_TIMEOUT=true
ELASTICSEARCH_SNIFF_ON_START=true
ELASTICSEARCH_SNIFF_ON_CONNECTION_FAIL=true
ELASTICSEARCH_SNIFFER_TIMEOUT=60

# Application Configuration
APP_NAME="Dogan AI 'Shahin KSA' - Enhanced"
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration
SECRET_KEY=DoganAI-Production-Secret-Key-2024-Change-In-Production
API_KEY_HEADER=X-API-Key
SESSION_TIMEOUT=3600

# Performance Settings
CACHE_TTL=600
REQUEST_TIMEOUT=60
ENABLE_CACHING=true
ENABLE_AUDIT_LOGGING=true

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,http://localhost:8501,https://doganai.com
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Timezone Configuration
APP_TIMEZONE=Asia/Riyadh
DISPLAY_TIMEZONE=Asia/Riyadh
FORCE_UTC_TIMESTAMPS=true

# Enhanced Database Features
ENABLE_TIMESERIES_ANALYTICS=true
ENABLE_FULL_TEXT_SEARCH=true
ENABLE_REAL_TIME_CACHING=true
ENABLE_PERFORMANCE_MONITORING=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

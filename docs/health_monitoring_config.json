{
  "monitoring": {
    "enable_health_checks": true,
    "health_check_interval": 30,
    "enable_performance_monitoring": true,
    "enable_uptime_tracking": true
  },
  "checks": {
    "database_health": true,
    "cache_health": true,
    "shard_health": true,
    "api_health": true
  },
  "alerts": {
    "enable_alerts": true,
    "alert_channels": [
      "email",
      "slack",
      "webhook"
    ],
    "critical_threshold": 95.0
  }
}